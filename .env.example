# Discord Configuration
DISCORD_TOKEN=your_discord_token
ALLOWED_SERVER_ID=your_server_id
ALLOWED_CHANNEL_ID=your_channel_id

# LLM Configuration
LLM_PROVIDER=lmstudio  # Options: lmstudio, openai, gemini

# LMStudio Configuration
LMSTUDIO_ENDPOINT=http://yourip:1234/v1
LMSTUDIO_MODEL=deepseek-r1-distill-qwen-14b

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-3.5-turbo

# Google Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-2.0-flash-exp

# Memory Configuration
CHROMA_PERSIST_DIR=./data/chroma
EMBEDDINGS_MODEL=sentence-transformers/all-mpnet-base-v2
MAX_MEMORIES_PER_QUERY=10
CONTEXT_WINDOW_SIZE=5
MEMORY_SIMILARITY_THRESHOLD=0.15
TOP_MEMORIES_TO_CONSIDER=8

# API Configuration
API_TIMEOUT=30
MAX_RETRIES=3
